<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"

    android:layout_height="match_parent">


    <RelativeLayout
        android:id="@+id/NoConnectionToBdLayout"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/NamePrLayout">

        <Button
            android:id="@+id/btnRefreshNoConnToBd"
            android:layout_width="160sp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/TextViewProblemAbout"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15sp"
            android:background="@color/main_red"
            android:text="@string/refresh"
            android:textColor="@color/white"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/imageView7"
            android:layout_width="120sp"
            android:layout_height="120sp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10sp"
            app:srcCompat="@drawable/noconntobdicon" />

        <TextView
            android:id="@+id/HiWEHaveTheProblemTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imageView7"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15sp"
            android:text="@string/hi_we_have_problem"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/TextViewProblemAbout"
            android:layout_width="200sp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/HiWEHaveTheProblemTextView"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10sp"
            android:gravity="center"
            android:text="@string/about_conn_problem"
            android:textColor="@color/grey"
            android:textStyle="bold" />
    </RelativeLayout>

    <android.support.constraint.ConstraintLayout
        android:id="@+id/BtnLayout2"
        android:layout_width="330sp"
        android:layout_height="40sp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="32dp"
        android:layout_marginStart="32dp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/MenuLayout"
        app:layout_constraintVertical_bias="0.0">

        <Button
            android:id="@+id/btnProtection"
            android:layout_width="112sp"
            android:layout_height="match_parent"
            android:background="@drawable/button_in_menuoff1"
            android:text="@string/protection"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0" />

        <Button
            android:id="@+id/btnFireSys"
            android:layout_width="110sp"
            android:layout_height="match_parent"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:background="@drawable/button_in_menuoff1"
            android:text="@string/fire_system"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/btnVoice"
            app:layout_constraintStart_toStartOf="@+id/btnProtection"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0" />

        <Button
            android:id="@+id/btnVoice"
            android:layout_width="112sp"
            android:layout_height="match_parent"
            android:background="@drawable/button_in_menuoff1"
            android:text="@string/voice"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0" />
    </android.support.constraint.ConstraintLayout>

    <RelativeLayout
        android:id="@+id/InformationLayout"
        android:layout_width="0dp"
        android:layout_height="210sp"
        android:background="@drawable/welcome"
        app:layout_constraintBottom_toTopOf="@+id/NamePrLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/btnQuestion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignTop="@+id/userimage"
            android:layout_marginStart="10sp"
            android:background="@drawable/imageuser"
            android:contentDescription="@string/log_out"
            app:srcCompat="@drawable/ic_icon_ask" />

        <de.hdodenhof.circleimageview.CircleImageView

            android:id="@+id/userimage"
            android:layout_width="110sp"
            android:layout_height="120sp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="29dp"
            app:srcCompat="@drawable/roset" />

        <TextView
            android:id="@+id/TextCity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/TextNameSurname"
            android:layout_centerHorizontal="true"
            android:text="TextView"
            android:textColor="@color/white"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/TextNameSurname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/userimage"
            android:layout_centerHorizontal="true"
            android:text="TextView"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/btnRefresh"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignTop="@+id/userimage"
            android:layout_marginEnd="10sp"
            android:background="@drawable/imageuser"
            app:srcCompat="@drawable/ic_icon_refresh" />

        <Space
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/btnQuestion" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/NamePrLayout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/InformationLayout">

        <TextView
            android:id="@+id/nameProjectTextView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="8dp"
            android:gravity="center"
            android:text="@string/nameProject"
            android:textColor="@color/main_black"
            android:textSize="30sp" />

        <ImageView
            android:id="@+id/btnSetting"
            android:layout_width="40sp"
            android:layout_height="40sp"
            android:layout_alignEnd="@+id/nameProjectTextView"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginEnd="45sp"
            android:layout_marginTop="3sp"
            android:background="@null"
            android:contentDescription="@string/log_out"
            android:visibility="visible"
            app:srcCompat="@drawable/ic_menu_settings" />

    </RelativeLayout>

    <android.support.constraint.ConstraintLayout
        android:id="@+id/BtnLayout1"
        android:layout_width="330sp"
        android:layout_height="40sp"
        android:layout_marginEnd="32dp"
        android:layout_marginStart="32dp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/NamePrLayout"
        app:layout_constraintVertical_bias="0.0">

        <Button
            android:id="@+id/btnLight"
            android:layout_width="110sp"
            android:layout_height="match_parent"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_weight="1"
            android:background="@drawable/button_in_menuoff1"
            android:text="@string/light"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/btnDevices"
            app:layout_constraintStart_toStartOf="@+id/btnSensors"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0" />

        <Button
            android:id="@+id/btnDevices"
            android:layout_width="112sp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/button_in_menuoff1"
            android:text="@string/devices"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0" />

        <Button
            android:id="@+id/btnSensors"
            android:layout_width="112sp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/button_in_menuon"
            android:text="@string/Sensors"
            android:textColor="@color/white"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0" />

    </android.support.constraint.ConstraintLayout>

    <android.support.constraint.ConstraintLayout
        android:id="@+id/MenuLayout"
        android:layout_width="0dp"
        android:layout_height="210sp"
        android:layout_marginBottom="8dp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/BtnLayout1"
        app:layout_constraintVertical_bias="0.0">


        <android.support.constraint.ConstraintLayout
            android:id="@+id/Light_Layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">


            <Switch
                android:id="@+id/automaticSwitch"
                style="@style/SwitchCompatStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="117dp"
                android:layout_marginStart="35dp"
                android:layout_marginTop="28dp"
                android:gravity="center"
                android:switchMinWidth="50sp"
                android:theme="@style/SwitchCompatTheme"
                app:layout_constraintEnd_toStartOf="@+id/chooseColor"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/automaticEnDis"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="60dp"
                android:layout_marginStart="35dp"
                android:text="@string/Manual"
                android:textColor="@color/main_black"
                app:layout_constraintEnd_toStartOf="@+id/chooseColor"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/automaticSwitch" />

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/chooseColor"
                android:layout_width="150sp"
                android:layout_height="150sp"
                android:layout_marginBottom="32dp"
                android:layout_marginEnd="32dp"
                android:layout_marginTop="32dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/hum_temp" />

            <Button
                android:id="@+id/btnSetColor"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginBottom="32dp"
                android:layout_marginEnd="30sp"
                android:layout_marginStart="35sp"
                android:layout_marginTop="141dp"
                android:background="@drawable/hum_temp"
                android:text="@string/set_color"
                android:textColor="@color/white"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/chooseColor"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/controlLightEnDis"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:layout_marginEnd="30dp"
                android:layout_marginStart="35dp"
                android:text="@string/Disabled_light"
                android:textColor="@color/main_black"
                app:layout_constraintBottom_toTopOf="@+id/btnSetColor"
                app:layout_constraintEnd_toStartOf="@+id/chooseColor"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/controlSwitch" />

            <Switch
                android:id="@+id/controlSwitch"
                style="@style/SwitchCompatStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="117dp"
                android:layout_marginStart="35dp"
                android:layout_marginTop="10dp"
                android:switchMinWidth="50sp"
                android:theme="@style/SwitchCompatTheme"
                app:layout_constraintBottom_toTopOf="@+id/controlLightEnDis"
                app:layout_constraintEnd_toStartOf="@+id/chooseColor"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/automaticEnDis" />

        </android.support.constraint.ConstraintLayout>

        <android.support.constraint.ConstraintLayout
            android:id="@+id/Voice_Layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/iconVoice"
                android:layout_width="110sp"
                android:layout_height="110sp"
                android:layout_marginEnd="32dp"
                android:layout_marginStart="32dp"
                android:layout_marginTop="8dp"
                android:contentDescription="@string/log_out"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/voiceoff" />

            <Switch
                android:id="@+id/voiceSwitch"
                style="@style/SwitchCompatStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="32dp"
                android:layout_marginStart="32dp"
                android:layout_marginTop="4dp"
                android:switchMinWidth="50sp"
                android:theme="@style/SwitchCompatTheme"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/iconVoice" />

            <TextView
                android:id="@+id/voiceEnDis"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="45dp"
                android:layout_marginEnd="164dp"
                android:layout_marginStart="167dp"
                android:text="@string/Disabled"
                android:textColor="@color/main_black"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.52"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/voiceSwitch" />

            <android.support.constraint.ConstraintLayout
                android:id="@+id/voiceCommandLayout"
                android:layout_width="300sp"
                android:layout_height="35sp"
                android:layout_marginBottom="8dp"
                android:layout_marginEnd="32dp"
                android:layout_marginStart="32dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/hum_temp"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/voiceEnDis">

                <ImageView
                    android:id="@+id/imageView3"
                    android:layout_width="25sp"
                    android:layout_height="25sp"
                    android:layout_marginBottom="8dp"
                    android:layout_marginStart="37dp"
                    android:layout_marginTop="8dp"
                    android:contentDescription="@string/log_out"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/iconvoice" />

                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:layout_marginEnd="32dp"
                    android:layout_marginStart="24dp"
                    android:layout_marginTop="8dp"
                    android:text="@string/Voice_command"
                    android:textColor="@color/white"
                    android:textSize="20sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toEndOf="@+id/imageView3"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.461" />
            </android.support.constraint.ConstraintLayout>
        </android.support.constraint.ConstraintLayout>

        <android.support.constraint.ConstraintLayout
            android:id="@+id/FireSystem_Layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone">

            <ImageView
                android:id="@+id/iconFireSystem"
                android:layout_width="110sp"
                android:layout_height="110sp"
                android:layout_marginBottom="32dp"
                android:layout_marginEnd="32dp"
                android:layout_marginStart="32dp"
                android:layout_marginTop="8dp"
                android:contentDescription="@string/log_out"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.0"
                app:srcCompat="@drawable/ic_menu_fire_system_off" />

            <Switch
                android:id="@+id/fireSystemSwitch"
                style="@style/SwitchCompatStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="32dp"
                android:layout_marginStart="32dp"
                android:layout_marginTop="4dp"
                android:switchMinWidth="50sp"
                android:theme="@style/SwitchCompatTheme"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/iconFireSystem" />

            <TextView
                android:id="@+id/fireDisEn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="45dp"
                android:layout_marginEnd="32dp"
                android:layout_marginStart="32dp"
                android:text="Disabled"
                android:textColor="@color/main_black"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.51"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/fireSystemSwitch"
                app:layout_constraintVertical_bias="1.0" />

            <android.support.constraint.ConstraintLayout
                android:id="@+id/warningfireLayout"
                android:layout_width="330sp"
                android:layout_height="40sp"
                android:layout_marginBottom="5dp"
                android:layout_marginEnd="32dp"
                android:layout_marginStart="32dp"
                android:layout_marginTop="6dp"
                android:background="@drawable/hum_temp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/fireDisEn">

                <ImageView
                    android:id="@+id/imageView5"
                    android:layout_width="32sp"
                    android:layout_height="32sp"
                    android:layout_marginBottom="8dp"
                    android:layout_marginStart="52dp"
                    android:layout_marginTop="8dp"
                    android:contentDescription="@string/log_out"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/warning" />

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="32dp"
                    android:layout_marginEnd="50dp"
                    android:layout_marginStart="24dp"
                    android:layout_marginTop="32dp"
                    android:text="@string/fire"
                    android:textColor="@color/white"
                    android:textSize="15sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/imageView5"
                    app:layout_constraintTop_toTopOf="parent" />
            </android.support.constraint.ConstraintLayout>
        </android.support.constraint.ConstraintLayout>

        <android.support.constraint.ConstraintLayout
            android:id="@+id/Protection_Layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone">

            <ImageView
                android:id="@+id/iconProtection"
                android:layout_width="110sp"
                android:layout_height="110sp"
                android:layout_marginBottom="32dp"
                android:layout_marginEnd="32dp"
                android:layout_marginStart="32dp"
                android:layout_marginTop="8dp"
                android:contentDescription="@string/log_out"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.0"
                app:srcCompat="@drawable/ic_menu_protection_system_off" />

            <Switch
                android:id="@+id/protectionSwitch"
                style="@style/SwitchCompatStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="32dp"
                android:layout_marginEnd="32dp"
                android:layout_marginStart="32dp"
                android:layout_marginTop="4dp"

                android:switchMinWidth="50sp"
                android:theme="@style/SwitchCompatTheme"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/iconProtection"
                app:layout_constraintVertical_bias="0.0" />

            <TextView
                android:id="@+id/protDisEn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="45dp"
                android:layout_marginEnd="32dp"
                android:layout_marginStart="32dp"
                android:text="Disabled"
                android:textColor="@color/main_black"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.51"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/protectionSwitch"
                app:layout_constraintVertical_bias="1.0" />

            <android.support.constraint.ConstraintLayout
                android:id="@+id/warningLayout"
                android:layout_width="330sp"
                android:layout_height="40sp"
                android:layout_marginBottom="5dp"
                android:layout_marginEnd="32dp"
                android:layout_marginStart="32dp"
                android:layout_marginTop="6dp"
                android:background="@drawable/hum_temp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/protDisEn">

                <ImageView
                    android:id="@+id/imageView4"
                    android:layout_width="32sp"
                    android:layout_height="32sp"
                    android:layout_marginBottom="8dp"
                    android:layout_marginStart="25dp"
                    android:layout_marginTop="8dp"
                    android:contentDescription="@string/log_out"
                    app:layout_constraintBottom_toBottomOf="parent"
