<?xml version="1.0" encoding="UTF-8"?>


<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context="ru.adscity.smart_house.Activities.TutorActivity">

    <android.support.v4.view.ViewPager
        android:id="@+id/viewPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true">

    </android.support.v4.view.ViewPager>

    <LinearLayout
        android:id="@+id/dotsLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10sp"
        android:gravity="center"
        android:orientation="horizontal">

    </LinearLayout>

    <ImageButton
        android:id="@+id/btnSkipTutor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="25sp"
        android:layout_marginEnd="10sp"
        android:layout_alignParentTop="true"
        android:background="@null"
        android:foregroundGravity="center"
        app:srcCompat="@drawable/ic_icon_tutor_close" />

    <ImageButton
        android:id="@+id/btnFirstScreenTutor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/dotsLayout"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10sp"
        android:background="@null"
        app:srcCompat="@drawable/ic_icon_next_slide_tutor" />

    <ImageButton
        android:id="@+id/btnLastScreenTutor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/dotsLayout"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10sp"
        android:background="@null"
        android:visibility="gone"
        app:srcCompat="@drawable/ic_icon_pref_slide_tutor" />

    <ImageButton
        android:id="@+id/btnNextSlideTutor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/dotsLayout"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="10sp"
        android:layout_marginEnd="30sp"
        android:background="@null"
        android:visibility="gone"
        app:srcCompat="@drawable/ic_icon_next_slide_tutor" />

    <ImageButton
        android:id="@+id/btnBackSlideTutor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/dotsLayout"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="10sp"
        android:layout_marginStart="30sp"
        android:background="@null"
        android:visibility="gone"
        app:srcCompat="@drawable/ic_icon_pref_slide_tutor" />

    <Button
        android:id="@+id/btnReportABug"
        android:layout_width="270sp"
        android:layout_height="60sp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="130sp"
        android:layout_marginTop="35sp"
        android:background="@drawable/button_in_menuon"
        android:text="@string/report_a_bug"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="23sp" />

</RelativeLayout>